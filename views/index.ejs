<%- include("partials/head") %>
<%- include("partials/header") %>
<%- include("partials/sidenav") %>
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Dashboard</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
            <div class="row">
                <div class="col-xl-4 col-md-4">
                    <div class="card bg-primary text-white mb-4">
                        <div class="card-body">
                            <i class="fas fa-home fa-2xl float-right"></i>
                            Total Houses 
                            <h1><%= houses.length %></h1>
                        </div>
                        <div class="card-footer  align-items-center justify-content-between">
                            <a class="small text-white stretched-link" href="/houses">View Details</a>
                            <i class="fas fa-angle-right"></i>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-md-4">
                    <div class="card bg-warning text-white mb-4">
                        <div class="card-body">
                            <i class="fas fa-users fa-2xl float-right"></i>
                            Total Tenants 
                            <h1><%= tenants %></h1>
                        </div>
                        <div class="card-footer  align-items-center justify-content-between">
                            <a class="small text-white stretched-link" href="/tenants">View Details</a>
                            <i class="fas fa-angle-right"></i>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-md-4">
                    <div class="card bg-success text-white mb-4">
                        <div class="card-body">
                            <i class="fas fa-dollar-sign fa-2xl float-right"></i>
                            <%= new Date().toLocaleString('default', { month: 'long' })  %> Payments 
                            <h1>10,000</h1>
                        </div>
                        <div class="card-footer  align-items-center justify-content-between">
                            <a class="small text-white stretched-link" href="/payments">View Details</a>
                            <i class="fas fa-angle-right"></i>
                        </div>
                    </div>
                </div>
            </div>
        <!-----------Bar Charts---------->
            <div class="row">
                <div class="col-xl-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-bar me-1"></i>
                            Bar Chart Example
                        </div>
                        <div class="card-body"><canvas id="myBarChart" width="100%" height="40"></canvas></div>
                    </div>
                </div>
            </div>
        </div>
    </main>

<%- include("partials/footer") %>